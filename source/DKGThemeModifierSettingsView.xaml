                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="200" Text="Trailers:"/>
                                            <CheckBox Height="20" Margin="0,0,0,5" IsChecked="{Binding Settings.Trailers_SWITCH}"/>
                                        </StackPanel>
                                    </StackPanel>

                                </StackPanel>
                            </ScrollViewer>
