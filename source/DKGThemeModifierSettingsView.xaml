                                            <RadioButton IsChecked="{Binding Settings.Colour9_EleganceFS}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceFS" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#00BAAF"/>
                                            <RadioButton IsChecked="{Binding Settings.Colour10_EleganceFS}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceFS" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#9D16FF"/>
                                            <RadioButton IsChecked="{Binding Settings.Colour11_EleganceFS}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceFS" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#C600AC"/>
                                        </StackPanel>

                                        <TextBlock Text="Covers" FontSize="22" Margin="0,10,0,5"/>
                                        <StackPanel>

                                        </StackPanel>

                                        <TextBlock Text="Trailers" FontSize="22" Margin="0,5,0,5"/>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Width="200" Text="Trailers:"/>
                                                <CheckBox Height="20" Margin="0,0,0,5" IsChecked="{Binding Settings.Trailers_EleganceFS}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Margin="0,40,0,0">
