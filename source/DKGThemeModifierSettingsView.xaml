                                            <RadioButton IsChecked="{Binding Settings.Colour5_EleganceFS}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceFS" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#83E200"/>
