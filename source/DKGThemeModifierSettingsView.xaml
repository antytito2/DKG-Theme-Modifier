                                            <RadioButton IsChecked="{Binding Settings.Colour4_EleganceDT}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceDT" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#ECE201"/>
                                            <RadioButton IsChecked="{Binding Settings.Colour5_EleganceDT}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceDT" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#83E200"/>
                                            <RadioButton IsChecked="{Binding Settings.Colour6_EleganceDT}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceDT" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#0E7A0D"/>
                                            <RadioButton IsChecked="{Binding Settings.Colour7_EleganceDT}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceDT" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#7AD7F0"/>
                                            <RadioButton IsChecked="{Binding Settings.Colour8_EleganceDT}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="ColourPicker_EleganceDT" Style="{DynamicResource ColourPicker_EleganceStyle}" Background="#006FCD"/>
